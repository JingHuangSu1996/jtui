{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "include": ["packages", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "types": ["@types/jest"]
}
